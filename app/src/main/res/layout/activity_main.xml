<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Load Image"
            android:layout_weight="0.05"
            android:onClick="loadImage"
            android:id="@+id/btnLoadImage" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:id="@+id/imageTop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="====== Pre-Process ======"
            android:textSize="24dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Convert to Grayscale"
            android:layout_weight="0.05"
            android:onClick="convertToGrayscaleImage"
            android:id="@+id/btnConvertToGrayscaleImage" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Reverse"
            android:layout_weight="0.05"
            android:onClick="reverseImage"
            android:id="@+id/btnReverseImage" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Equalize"
            android:layout_weight="0.05"
            android:onClick="equalizeImage"
            android:id="@+id/btnEqualizeImage" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Thresholding"
            android:layout_weight="0.05"
            android:onClick="thresholdingImage"
            android:id="@+id/btnThresholdingImage" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Blurring"
            android:layout_weight="0.05"
            android:onClick="blurringImage"
            android:id="@+id/btnBlurringImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:id="@+id/txtBlurringMethod"
            android:textSize="18dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Change Method"
            android:layout_weight="0.05"
            android:onClick="changeBlurringMethod"
            android:id="@+id/btnChangeBlurringMethod" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="====== Edge Detection ======"
            android:textSize="24dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Edge Detection"
            android:layout_weight="0.05"
            android:onClick="edgeDetectionImage"
            android:id="@+id/btnEdgeDetectionImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:id="@+id/txtEdgeDetectionOrder"
            android:textSize="18dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Change Order"
            android:layout_weight="0.05"
            android:onClick="changeEdgeDetectionOrder"
            android:id="@+id/btnChangeEdgeDetectionOrder" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:id="@+id/txtEdgeDetectionMethod"
            android:textSize="18dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Change Method"
            android:layout_weight="0.05"
            android:onClick="changeEdgeDetectionMethod"
            android:id="@+id/btnChangeEdgeDetectionMethod" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="====== Face Detection ======"
            android:textSize="24dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Face Detection"
            android:layout_weight="0.05"
            android:onClick="faceDetectionImage"
            android:id="@+id/btnFaceDetectionImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:id="@+id/txtResult"
            android:textSize="24dp"/>

    </LinearLayout>

</RelativeLayout>
